{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "es2015",
        "target": "es2015",
        "sourceMap": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],  
    "include": [  
        "./src/**/*",
        "./src/**/*"
    ]
}